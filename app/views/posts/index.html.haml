.row
  .col-md-12
    - if user_signed_in?
      %h3 Hi #{current_user.email}!
    - else
      %h3 Hello there!
      = link_to "sign in", new_user_session_path
.row
  .col-md-4
    - @posts.each do |p|
      %h4
        %small Title:
        = link_to "#{p.title}", post_path(id: p.id)
    %p.text-left
      That's the end of the
      %abbr(title='a blog post')
        posts!
%button.btn
  = link_to "new post", new_post_path


